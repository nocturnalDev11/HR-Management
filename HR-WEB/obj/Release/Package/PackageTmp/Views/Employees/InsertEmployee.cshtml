@model HR_WEB.HRService.EMPLOYEE_MODEL

<div class="modal fade" id="insertEmployeeModal" tabindex="-1" aria-labelledby="insertEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @using (Html.BeginForm("InsertEmployee", "Employees", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()

                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="insertEmployeeModalLabel"><i class="bi bi-person-plus-fill me-2"></i>Add New Employee</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.EMPLOYEE_ID)
                            @Html.TextBoxFor(m => m.EMPLOYEE_ID, new { @class = "form-control", type = "number" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.FIRST_NAME)
                            @Html.TextBoxFor(m => m.FIRST_NAME, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.LAST_NAME)
                            @Html.TextBoxFor(m => m.LAST_NAME, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.EMAIL)
                            @Html.TextBoxFor(m => m.EMAIL, new { @class = "form-control", type = "email" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.PHONE_NUMBER)
                            @Html.TextBoxFor(m => m.PHONE_NUMBER, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.HIRE_DATE)
                            @Html.TextBoxFor(m => m.HIRE_DATE, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.JOB_ID)
                            @Html.TextBoxFor(m => m.JOB_ID, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.SALARY)
                            @Html.TextBoxFor(m => m.SALARY, new { @class = "form-control", type = "number", step = "0.01" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.COMMISION_PCT)
                            @Html.TextBoxFor(m => m.COMMISION_PCT, new { @class = "form-control", type = "number", step = "0.01" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.MANAGER_ID)
                            @Html.TextBoxFor(m => m.MANAGER_ID, new { @class = "form-control", type = "number" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.DEPARTMENT_ID)
                            @Html.TextBoxFor(m => m.DEPARTMENT_ID, new { @class = "form-control", type = "number" })
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            }
        </div>
    </div>
</div>
